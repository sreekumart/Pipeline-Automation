pipeline {
    agent any
	environment {
		FILEPATH = "/c/Users/Stuliche/Desktop/JenkinsFile/Pipeline-Automation/scripts/jobFlag.txt"
		RESULTPATH = "/c/Users/Stuliche/Desktop/JenkinsFile/Pipeline-Automation/scripts"
		FPATH = "C:/Users/Stuliche/Desktop/JenkinsFile/Pipeline-Automation/scripts"
	}
stages{
        stage('DTFILEPP'){
			
			when {
				expression {
					sh "cat ${env.FILEPATH} | grep 'DTFILEPP' | awk -F ':' '{ print \$2 }' > ${RESULTPATH}/DTFILEPP"
					sh "pwd"
					RESULT=readFile("${env.FPATH}/DTFILEPP").trim()
					echo RESULT
					return RESULT != 'SUCCESS';
				}
			}
            steps {
				sh "ssh -i /c/Users/Stuliche/.jenkins/privatekey/secret.key akumar39@lena088.jcpenney.com './jenkins/jobs/step1.sh'"
				sh "ssh -i /c/Users/Stuliche/.jenkins/privatekey/secret.key akumar39@lena088.jcpenney.com exit"
            }
			post {
						success {
							sh "echo DTFILEPP:SUCCESS >> ${env.FILEPATH}"
						}
						failure{
							sh "echo DTFILEPP:FAILURE >> ${env.FILEPATH}"
						}
			}		
        }
		
		stage('DTLEPSKU'){
			when {
				expression {
					sh "cat ${env.FILEPATH} | grep 'DTLEPSKU' | awk -F ':' '{ print \$2 }' > ${RESULTPATH}/DTLEPSKU"
					sh "pwd"
					RESULT=readFile("${env.FPATH}/DTLEPSKU").trim()
					echo RESULT
					return RESULT != 'SUCCESS';
				}
			}
            steps {
                sh "ssh -i /c/Users/Stuliche/.jenkins/privatekey/secret.key akumar39@lena088.jcpenney.com './jenkins/jobs/step1.sh'"
				sh "ssh -i /c/Users/Stuliche/.jenkins/privatekey/secret.key akumar39@lena088.jcpenney.com exit"
            }
			post {
						success {
							sh "echo DTLEPSKU:SUCCESS >> ${env.FILEPATH}"
						}
						failure{
							sh "echo DTLEPSKU:FAILURE >> ${env.FILEPATH}"
						}
			}	
        }

        stage ('POST-DTLEPSKU'){
            parallel{
                stage ('DTLIBP01'){
                    steps {
                        sh "/c/Users/Stuliche/Desktop/JenkinsFile/Pipeline-Automation/scripts/hello.sh"
                    }
                }

				stage ('DTLEP3SF'){
                    steps {
						script {
							build (job: 'DTLEPS3F', wait: false,propagate: false)
                        }
                    }
                }
				
                stage ('DTLEPCOL'){
                    steps {
						sh "echo this job will fail"
                        sh "exit 1"
                    }
                }
            }
        }
		
		
		/***stage ('POST-DTLEPSKU'){
            parallel{
				stage ('DTLEPCOL'){
                    steps {
                        sh "echo DTLEPCOL"
                    }
                }
            }
        }
		
		stage('DTLEPREC'){
			steps {
                        sh "echo DTLEPREC"
            }
		
		}

		stage('POST-DTLEPREC'){
		
			parallel{
				stage('DTLEPSEO'){
					steps {
						sh "echo DTLEPSEO"
					}
